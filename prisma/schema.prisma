// Payment Operators (Mobile Money & Banks)
model PaymentOperator {
  id                    String   @id @default(cuid())
  name                  String
  code                  String   @unique // MTN_RW, AIRTEL_RW, etc.
  country               String
  type                  String // mobile_money, bank
  enabled               Boolean  @default(false)
  primaryProviderId     String?
  alternativeProviderId String?
  supportedOperations   Json // { deposit: true, withdrawal: true, refund: true, disburse: true }
  limits                Json? // { minAmount, maxAmount, dailyLimit }
  fees                  Json? // { depositFee, withdrawalFee, refundFee, disburseFee }
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  primaryProvider     PaymentProvider? @relation("PrimaryProvider", fields: [primaryProviderId], references: [id])
  alternativeProvider PaymentProvider? @relation("AlternativeProvider", fields: [alternativeProviderId], references: [id])

  @@index([code])
  @@index([country])
  @@index([type])
  @@index([enabled])
  @@map("payment_operators")
}
